{
  "name": "@softwareventures/prettier-config",
  "version": "0.0.0-development",
  "description": "Standard Prettier configuration for Software Ventures Limited",
  "keywords": [
    "prettier",
    "typescript"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/prettier-config",
  "bugs": "https://github.com/softwareventures/prettier-config",
  "repository": "github:softwareventures/prettier-config",
  "license": "ISC",
  "scripts": {
    "pre-commit": "precise-commits",
    "fix": "tsc --noEmit && eslint --fix . && prettier --write .",
    "lint": "tsc --noEmit && eslint . && prettier --check .",
    "prepare": "husky install && tsc",
    "semantic-release": "semantic-release",
    "test": "ava"
  },
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "dependencies": {
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@softwareventures/eslint-config": "5.1.5",
    "@softwareventures/precise-commits": "2.0.22",
    "@softwareventures/semantic-release-config": "2.0.2",
    "@softwareventures/tsconfig": "5.1.1",
    "@types/prettier": "2.7.1",
    "ava": "4.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.24.0",
    "husky": "7.0.4",
    "prettier": "2.7.1",
    "semantic-release": "17.4.7",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": "@softwareventures"
  },
  "prettier": ".",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  }
}
