{
  "name": "@softwareventures/prettier-config",
  "version": "0.0.0-development",
  "description": "Standard Prettier configuration for Software Ventures Limited",
  "keywords": [
    "prettier",
    "typescript"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/prettier-config",
  "bugs": "https://github.com/softwareventures/prettier-config",
  "repository": "github:softwareventures/prettier-config",
  "license": "ISC",
  "scripts": {
    "fix": "tsc --noEmit && tslint --fix --project . && prettier --write .",
    "lint": "tsc --noEmit && tslint --project . && prettier --check .",
    "prepare": "husky install && tsc",
    "pre-commit": "precise-commits",
    "semantic-release": "semantic-release",
    "test": "tslint --project . && ava"
  },
  "engines": {
    "node": "^12 || ^14 || >=16"
  },
  "dependencies": {
    "tslib": "1.14.1"
  },
  "devDependencies": {
    "@softwareventures/precise-commits": "2.0.12",
    "@softwareventures/semantic-release-config": "1.2.0",
    "@softwareventures/tsconfig": "2.3.3",
    "@softwareventures/tslint-rules": "1.0.0",
    "@types/prettier": "2.4.3",
    "ava": "3.15.0",
    "cz-conventional-changelog": "3.3.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "semantic-release": "17.4.7",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "4.5.5"
  },
  "prettier": ".",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "extends": "@softwareventures/semantic-release-config"
  }
}
