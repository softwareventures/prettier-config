{
  "name": "@softwareventures/prettier-config",
  "version": "0.0.0-development",
  "description": "Standard Prettier configuration for Software Ventures Limited",
  "keywords": [
    "prettier",
    "typescript"
  ],
  "author": "Daniel Cassidy <mail@danielcassidy.me.uk>",
  "homepage": "https://github.com/softwareventures/prettier-config",
  "bugs": "https://github.com/softwareventures/prettier-config",
  "repository": "github:softwareventures/prettier-config",
  "license": "ISC",
  "scripts": {
    "prepare": "tsc",
    "semantic-release": "semantic-release",
    "test": "tslint --project . && ava"
  },
  "dependencies": {
    "tslib": "1.11.1"
  },
  "devDependencies": {
    "@softwareventures/tsconfig": "2.2.0",
    "@softwareventures/tslint-rules": "0.8.1",
    "@types/prettier": "2.0.0",
    "ava": "3.8.1",
    "cz-conventional-changelog": "3.2.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "prettier": "2.0.5",
    "semantic-release": "17.0.7",
    "ts-node": "8.10.1",
    "tslint": "6.1.2",
    "typescript": "3.8.3"
  },
  "prettier": ".",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,htm,html,js,json,jsx,less,md,sass,ts,tsx,yaml,yml,xml}": "prettier --write"
  }
}
